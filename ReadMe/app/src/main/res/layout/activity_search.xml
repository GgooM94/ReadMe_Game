<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#065299"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/Image_logo" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:text="캠퍼스 맵"
            android:textStyle="bold"
            android:textSize="25dp"
            tools:textColor="#e0ffffff"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_campus"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/Image_campus" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSearch01"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#aba9a9"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="경영대학" />


        <Button
            android:id="@+id/btnSearch02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#aba9a9"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="사회과학" />

        <Button
            android:id="@+id/btnSearch03"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#aba9a9"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="인문대학" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSearch04"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#aba9a9"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="법과대학" />

            <Button
                android:id="@+id/btnSearch05"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#aba9a9"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="공과대학" />

            <Button
                android:id="@+id/btnSearch06"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#aba9a9"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="바이오" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSearch07"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#aba9a9"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="IT대학" />

            <Button
                android:id="@+id/btnSearch08"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#aba9a9"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="한의과" />

            <Button
                android:id="@+id/btnSearch09"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#aba9a9"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="예술대학" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#aba9a9"
            android:background="#f2eded"
            android:text="개인정보 취급 및 설명" />
    </LinearLayout>

</LinearLayout>
